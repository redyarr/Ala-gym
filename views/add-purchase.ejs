
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/css/form.css" />
    <link rel="stylesheet" href="/css/purchase.css">
</head>

<body>
    <header>
        <%-include('./includes/nav.ejs')%>
    </header>
<section>
    <div class="container">
        
        <% if(errorMessage) { %>
            <div style="color: red; font-weight: bold; margin-bottom: 20px;    text-align: center;">
                <%=errorMessage%>
            </div>
        <% } %>

<form action="/add-purchase" method="POST">
    <label for="customerId">Customer:</label>
    <select id="customerId" name="customerId" required>
        <% customers.forEach(function(customer) { %>
            <option value="<%= customer.id %>"><%= customer.Fname %> <%= customer.Lname %></option>
        <% }); %>
    </select>
    <label for="productId">Product:</label>
    <select id="productId" name="productId" required>
        <% products.forEach(function(product) { %>
            <option value="<%= product.id %>"><%= product.name %></option>
        <% }); %>
    </select>
    <label for="quantity">Quantity:</label>
    <input type="number" id="quantity" name="quantity" required>
    <button type="submit">Assign Product</button>
</form>


</section>

